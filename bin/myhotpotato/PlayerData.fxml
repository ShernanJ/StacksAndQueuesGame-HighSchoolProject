<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="myhotpotato.PlayerDataController">
   <center>
      <Pane id="mainWindow" prefHeight="500.0" prefWidth="500.0" stylesheets="@application.css" BorderPane.alignment="CENTER">
         <children>
            <Text id="mainText" layoutX="145.0" layoutY="55.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Input Players Names" />
            <TextField fx:id="inputField" layoutX="176.0" layoutY="70.0" onAction="#enterKey" stylesheets="@application.css" />
            <TextArea fx:id="playerList" editable="false" layoutX="137.0" layoutY="122.0" prefHeight="224.0" prefWidth="226.0" stylesheets="@application.css" />
            <Button id="smallButtons" layoutX="14.0" layoutY="234.0" mnemonicParsing="false" onAction="#removePlayer" prefHeight="33.0" prefWidth="108.0" stylesheets="@application.css" text="Remove Player" />
            <Button id="smallButtons" layoutX="379.0" layoutY="235.0" mnemonicParsing="false" onAction="#addPlayer" prefHeight="31.0" prefWidth="107.0" stylesheets="@application.css" text="Add Player" />
            <Button id="smallButtons" layoutX="151.0" layoutY="410.0" mnemonicParsing="false" onAction="#quitGame" prefHeight="34.0" prefWidth="90.0" stylesheets="@application.css" text="Quit" />
            <Button id="smallButtons" layoutX="259.0" layoutY="410.0" mnemonicParsing="false" onAction="#openPlayScreen" prefHeight="34.0" prefWidth="90.0" stylesheets="@application.css" text="Continue" />
         </children>
      </Pane>
   </center>
</BorderPane>
